<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icn6" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/news_image"
            android:layout_toRightOf="@id/news_image"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/news_image"
            android:layout_toRightOf="@id/news_image"
            android:lineSpacingExtra="5dp"
            android:maxLines="3"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@id/news_title"
            android:text="News Description"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/news_image"
            android:layout_below="@id/news_description"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="5dp"
                />

            <TextView
                android:id="@+id/news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="5dp"
                android:layout_toEndOf="@id/news_date"
                />

            <TextView
                android:id="@+id/news_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100 Views"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="5dp"
                android:gravity="end"
                android:layout_toEndOf="@id/news_source"
                />


        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>